<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameHeadToHead"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:backgroundTint="@android:color/background_dark"
    tools:context=".HeadToHeadFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButtonBot"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:onClick="onClickBot"
            android:src="@drawable/school" />

        <ImageButton
            android:id="@+id/imageButtonTop"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:onClick="onClickTop"
            android:src="@drawable/school" />

        <ImageView
            android:id="@+id/imageVS"
            android:layout_width="99dp"
            android:layout_height="94dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/vs" />

        <TextView
            android:id="@+id/textViewBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="Team 2"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Team 1"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />

    </RelativeLayout>

</FrameLayout>